{
    "compilerOptions": {
        /* Language and Environment */
        "target": "es2017",

        /* Modules */
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "skipLibCheck": true,

        /* Distribution */
        "outDir": "bin"
    }
}
